<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/qingse">

    <com.wuhenzhizao.titlebar.widget.CommonTitleBar
        android:id="@+id/qxiaofei_back"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:centerText="消费指数"
        app:centerTextColor="@color/white"
        app:centerTextSize="18sp"
        app:centerType="textView"
        app:showBottomLine="false"
        app:fillStatusBar="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:statusBarColor="@color/qingse"
        app:titleBarColor="@color/qingse"
        tools:ignore="MissingConstraints">
    </com.wuhenzhizao.titlebar.widget.CommonTitleBar>

    <TextView
        android:id="@+id/textView12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:drawableLeft="@mipmap/ic_favorite_border"
        android:gravity="center"
        android:text="消费属性"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.16"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/qxiaofei_back" />

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="@drawable/button_yuan_white"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView12">
        <Button
            android:id="@+id/textView13"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:text="全州消费数据"
            android:textColor="@color/white"
            android:drawablePadding="150dp"
            android:background="#00000000"
            android:drawableRight="@mipmap/ic_navigate_next"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/white"/>
        <Button
            android:id="@+id/textView14"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:drawablePadding="120dp"
            android:drawableRight="@mipmap/ic_navigate_next"
            android:background="#00000000"
            android:text="消费场景支出比重" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/white"/>

        <Button
            android:id="@+id/textView15"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:drawablePadding="170dp"
            android:drawableRight="@mipmap/ic_navigate_next"
            android:background="#00000000"
            android:text="消费情况" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/white"/>

        <Button
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:drawablePadding="130dp"
            android:drawableRight="@mipmap/ic_navigate_next"
            android:background="#00000000"
            android:text="平均单笔消费额" />
    </LinearLayout>

</android.support.constraint.ConstraintLayout>
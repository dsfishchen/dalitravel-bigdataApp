<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="QMUI.Compat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/qingse</item>
        <item name="colorPrimaryDark">@color/qingse</item>
        <item name="colorAccent">@color/qingse</item>
        <item name="android:windowBackground">@drawable/shape_gradient</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="Theme.MyAppTheme" parent="AppTheme">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@drawable/shape_gradient</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <!--登录注册-->
    <style name="AppTheme.Dark.Dialog" parent="Theme.AppCompat.Dialog">
        <item name="colorAccent">@color/white</item>
        <item name="android:textColorPrimary">@color/iron</item>
        <item name="android:background">@color/primary</item>
    </style>
</resources>
